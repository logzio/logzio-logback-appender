<settings>
    <servers>
        <server>
            <id>ossrh-nexus</id>
            <username>${env.OSSRH_USERNAME}</username>
            <password>${env.OSSRH_PASSWORD}</password>
        </server>
        <server>
            <id>gpg.passphrase</id>
            <passphrase>${env.GPG_PASSPHRASE}</passphrase>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>ossrh-nexus</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${env.GPG_KEY}</gpg.keyname>
                <gpg.passphrase>server</gpg.passphrase>
                <gpg.arguments>
                    <arg>--batch</arg>
                    <arg>--yes</arg>
                    <arg>--no-tty</arg>
                </gpg.arguments>
            </properties>
        </profile>
    </profiles>
</settings>